<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009788">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_mode"
            android:text="Select mode"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_music"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_music" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/area_footer">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NO LIMIT TIME"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="NORMAL"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="HARD"
            android:background="@drawable/btn_music"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:background="@drawable/area_footer">
        <Button
            android:id="@+id/btn_share"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:textStyle="bold"
            android:background="@drawable/btn_music"
            android:layout_alignParentLeft="true"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btn_moreGame"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="MORE GAMES"
            android:textStyle="bold"
            android:background="@drawable/btn_music"
            android:layout_alignParentRight="true"
            android:textColor="#fff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <RelativeLayout
        android:id="@+id/footer_screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009788">
    </RelativeLayout>

</LinearLayout>